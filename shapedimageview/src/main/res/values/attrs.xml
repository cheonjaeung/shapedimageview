<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Attributes of all shaped image view. -->
    <declare-styleable name="ShapedImageView">
        <!-- Shadow options -->
        <attr name="shaped_imageview_shadow_enabled" format="boolean" />
        <attr name="shaped_imageview_shadow_size" format="dimension" />
        <attr name="shaped_imageview_shadow_adjust_enabled" format="boolean" />
        <attr name="shaped_imageview_shadow_color" format="color" />
        <attr name="shaped_imageview_shadow_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
            <enum name="top_left" value="5" />
            <enum name="top_right" value="6" />
            <enum name="bottom_right" value="7" />
            <enum name="bottom_left" value="8" />
        </attr>
        <!-- Border options -->
        <attr name="shaped_imageview_border_enabled" format="boolean" />
        <attr name="shaped_imageview_border_size" format="dimension" />
        <attr name="shaped_imageview_border_color" format="color" />
    </declare-styleable>

    <!-- Attributes of circular image view. -->
    <declare-styleable name="CircularImageView">
    </declare-styleable>

    <!-- Attributes of rounded square image view. -->
    <declare-styleable name="RoundedSquareImageView">
        <attr name="shaped_imageview_radius" format="dimension" />
    </declare-styleable>

    <!-- Attributes of square image view. -->
    <declare-styleable name="SquareImageView">
    </declare-styleable>

    <!-- Attributes of squircular image view. -->
    <declare-styleable name="SquircularImageView">
        <attr name="shaped_imageview_curvature" format="integer" />
    </declare-styleable>
</resources>