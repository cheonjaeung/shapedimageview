<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapedImageView">
        <attr name="android:scaleType" />

        <attr name="border_size" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_enabled" format="boolean" />

        <attr name="shadow_size" format="dimension" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_enabled" format="boolean" />

        <attr name="aspect_ratio" format="string" />
    </declare-styleable>

    <declare-styleable name="CorneredImageView">
        <attr name="radius" format="dimension" />
        <attr name="top_left_radius" format="dimension" />
        <attr name="top_right_radius" format="dimension" />
        <attr name="bottom_right_radius" format="dimension" />
        <attr name="bottom_left_radius" format="dimension" />s
    </declare-styleable>

    <declare-styleable name="FormulableImageView">
        <attr name="shape_formula" format="string" />
    </declare-styleable>
</resources>